{
  "name": "carlwahlen-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev:portfolio": "pnpm --filter portfolio dev",
    "dev:ai-api": "pnpm --filter ai-navigation-api dev",
    "dev:all": "pnpm --parallel --filter \"./apps/*\" dev",
    "build": "pnpm --recursive build",
    "build:portfolio": "pnpm --filter portfolio build",
    "build:ai-api": "pnpm --filter ai-navigation-api build",
    "lint": "pnpm --recursive lint",
    "type-check": "pnpm --recursive type-check",
    "generate-sitemap": "tsx scripts/generate-sitemap.ts"
  },
  "devDependencies": {
    "typescript": "^5.2.2",
    "tsx": "^4.7.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
